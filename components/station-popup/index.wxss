.common_mask {
  background-color: rgba(0, 0, 0, 0.9);
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  transition: transform 0.3s ease-in-out;

}

.mask_box {
  display: flex;
  align-items: center;
  height: 100%;
}

.content {
  margin: 0 auto;
  display: flex;
}

.bg-box {
  position: relative;
}

.bg-img {
  width: 624rpx;
  height: 535rpx;

}

.do-box {
  position: absolute;
  top: 220rpx;
  left: 12rpx;
}

.name-box {
  /* width: 620rpx; */
  font-family: zihun197hao-damingsonghuaijiuban;
  font-size: 28rpx;
  line-height: 48rpx;
  letter-spacing: 2rpx;
  color: #000000;
 
}

.text {
  width: 80%;
  text-align: center;
  margin-left: 8%;
}

.typeName {
  width: 168rpx;
  background-color: #FECB8C;
  font-size: 30rpx;
	font-weight: bold;
	letter-spacing: 3rpx;
	color: #f46700;
}

.change-btn {
  width: 198rpx;
  height: 60rpx;
  position: absolute;
  top:196rpx;
  left: 200rpx;


}

.img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


.close-box {
  width: 62rpx;
  height: 62rpx;
  text-align: center;
  position: absolute;
  top: 72%;
  left: 45%;

}

.close-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.tip{
  width: 620rpx;
  height: 18rpx;
	font-family: PingFangSC-Medium;
	font-size: 18rpx;
	letter-spacing: 2rpx;
  color: #ec7b2d;
  text-align: center;
  margin-top: 26rpx;
}