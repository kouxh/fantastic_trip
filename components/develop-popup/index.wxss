/* components/popup/index.wxss *//** 弹出层 **/
.common_mask {
  background-color: rgba(0, 0, 0, 0.9);
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  transition: transform 0.3s ease-in-out;

}

.mask_box {
  display: flex;
  align-items: center;
  height: 100%;
}

.content {
  margin: 0 auto;
  display: flex;
}

.bg-box {
  position: relative;
}

.bg-img {
  width: 654rpx;
  height: 600rpx;

}

.do-box {
  position: absolute;
  top: 245rpx;
  left: 24rpx;
}

.name-box {
  width: 620rpx;
  font-family: zihun197hao-damingsonghuaijiuban;
  font-size: 28rpx;
  line-height: 48rpx;
  letter-spacing: 2rpx;
  color: #000000;

}

.text {
  text-align: center;
}

.typeName {
  width: 168rpx;
	height: 13rpx;
	background-color: #F9B4C4;
  font-size: 30rpx;
	font-weight: bold;
	letter-spacing: 3rpx;
	color: #e73574;
}

.change-btn {
  width: 198rpx;
  height: 60rpx;
  position: absolute;
  top: 210rpx;
  left: 200rpx;


}

.img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


.close-box {
  width: 62rpx;
  height: 62rpx;
  text-align: center;
  position: absolute;
  top: 960rpx;
  left: 45%;

}

.close-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}