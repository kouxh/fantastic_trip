}
.tip-bg{
  width: 50%;
  height: 32rpx;
  background-color: #FCF2A2;
  font-size: 40rpx;
  font-weight: bold;
  color: #f77029;
  letter-spacing: 2rpx;
  line-height: 4rpx;
  margin: 0 auto;
  margin-top: 80rpx;
  text-align: center;
}