}

 .content-box .every-list {
  width: 650rpx;
	height: 210rpx;
  background-image: url("https://march.yuanian.com/static/assets/img/icon/floor.png");
  background-size: 650rpx 210rpx;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  margin: 0 auto;
  position: relative;
}
 .content-box .every-list .list-left {
  width: 180rpx;
	height: 134rpx;
  flex: none;
  padding-left: 54rpx;
}

 .content-box .every-list .list-right {
  width: 320rpx;
  margin-left: 40rpx;
  flex-direction: column;
  display: flex;
  justify-content: space-around;
}
.content-box .every-list .list-right .right-up {
  font-size: 32rpx;
	font-weight: bold;
  color: #3b3b3b;
  margin-bottom: 8rpx;

}
.content-box .every-list .list-right .right-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content-box .every-list .list-right .right-bottom .left {
  font-size: 24rpx;
	color: #3b3b3b;
  display: flex;
  align-items: center;
  letter-spacing: 2rpx;

}
.limited{
  position: absolute;
  top: 10rpx;
  right: 16rpx;
  width: 90rpx;
  height: 90rpx;
}
.icon-img{
  width: 22rpx;
  height: 22rpx;
  object-fit: cover;
  margin-right: 20rpx;
}
 .content-box .every-list .list-right .right-bottom .right {
  width: 98rpx;
  height: 42rpx;
  margin-left: 30rpx;
}

