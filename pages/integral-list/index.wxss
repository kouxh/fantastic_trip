  object-fit: cover;
}
 .integral-usable-content {
   width: 100%;
   padding-bottom: 100rpx;
}
 .content-box {
  margin-top: 20rpx;
  min-height: 690rpx;
}
.content-box-load {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 300rpx 0;
}
 .nomsg-img-box {
  text-align: center;
  margin-top: 250rpx;
  margin-bottom: 200rpx;
}
.none-bg{
  width: 524rpx;
	height: 38rpx;
  background-color: #53E3F6;
  margin: 0 auto;
