
page{
  background-color: #fff;
}
.pages-index{
  width:750rpx;
  height: 100vh;
  /* background-color: #fff; */
}
.index-bg{
  width: 100%;
  height: 90%;
  position: relative;
}
.index-img{
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.title-img{
  width: 88%;
  height: 24%;
  position: absolute;
  /* top: -400rpx; */
  top: 3%;
  left: 40rpx;

}
.index-btn{
  width: 353rpx;
  height: 80rpx;
  margin: 0 auto;
  margin-top: -120rpx;
}
.index-tip{
  font-family: PingFangSC-Light;
	font-size: 18rpx;
	letter-spacing: 3rpx;
  color: #939393;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 70rpx;
}
.topImage{
  animation: image 1.5s infinite; 
}
.image{
  animation: topImage 1.2s 1; 
}
@keyframes topImage {
  0% {transform: scale(0.9,0.9);}
  25% {transform: scale(1.2,1.2);}
  50% {transform: scale(0.9,0.9);}
  70% {transform: scale(1.2,1.2);}
  100% {transform: scale(0.9,0.9);}
  
}
@keyframes image{
  0% {transform: scale(1,1);}
  25% {transform: scale(1.2,1.2);}
  50% {transform: scale(1,1);}
  70% {transform: scale(1.2,1.2);}
  100% {transform: scale(1,1);}
  }