
page {
  font-family: -apple-system, BlinkMacSystemFont, Helvetica Neue, Helvetica, Roboto, Arial, PingFang SC,
    Hiragino Sans GB, Microsoft Yahei, SimSun, sans-serif;
    background-color: #f8f8f8;
}

/* 一行省略 */
.ellipsis1row {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 两行省略 */
.ellipsis2row {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  /*! autoprefixer: off */
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  /*! autoprefixer: on */
}
.fifiveline {
  display: -webkit-box !important;
  -webkit-line-clamp: 6;
  overflow: hidden;
  text-overflow: ellipsis;
  /*! autoprefixer: off */
  word-break: break-all;
  -webkit-box-orient: vertical;
  /*! autoprefixer: on */
}
/* IphoneX时底部留白距离 */
.IpX-Bottom {
  padding-bottom: 40rpx !important;
}
.img{
  width: 100%;
  height: 100%;
  object-fit: cover;
}


