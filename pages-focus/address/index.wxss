.pages-address-index{
  width: 100%;
  height: 100vh;
  background-image: url("https://march.yuanian.com/static/assets/img/address-bg.jpg");
  background-size: 100% 100vh;
  background-repeat: no-repeat;
}
.title{
  width: 340rpx;
  height: 110rpx;
  margin: 0 auto;
  padding-top: 90rpx;
}
.img{
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.address-box{
  width: 680rpx;
  min-height: 650rpx;
  background-image: url("https://march.yuanian.com/static/assets/img/two-floor.png");
  background-size:680rpx 650rpx;
  background-repeat: no-repeat;
  margin: 0 auto;
  margin-top: -40rpx;
  display: flex;
  flex-direction: column;
}
.address-list {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  min-height: 90rpx;
  margin-left: 50rpx;
 
}
.address-list:first-child {
  margin-top: 140rpx;
}
.address-title{
  flex: none;
  box-sizing: border-box;
  width: 24%;
  font-size: 28rpx;
	font-weight: bold;
	color: #8a4e00;
}
.address-ipt {
  width: 66%;
  font-size: 28rpx;
  color: #333;
  height: 46rpx;
  line-height: 46rpx;
  border-bottom: solid 2rpx #683b00;
}
.address-list-textarea {
  display: flex;
  min-height: 108rpx;
  align-items: center;
  margin-left: 50rpx;
}
.address-textarea {
  font-size: 28rpx;
  color: #333;
  width: 66%;
  border-bottom: solid 2rpx #683b00;
}

.submit-btn{
  width: 190rpx;
	height: 65rpx;
  margin: 0 auto;
}
.tip-bg{
  width: 92%;
  height: 20rpx;
  background-color: #f09c2e;
  font-size: 26rpx;
  color: #ffffff;
  line-height: 4rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  text-align: center;
}

.van-popup{
  background-color:transparent !important;
  background-color: var(--popup-background-color,transparent) !important;
}
.popup-box{
  width: 600rpx;
  height: 254rpx;
  margin-top: -26rpx;
  position: relative;
}
.title-text{
  font-size: 32rpx;
	font-weight: bold;
  color: #3b3b3b;
  position: absolute;
  top: 60rpx;
  left: 210rpx;
}
.person-img{
  width: 265rpx;
  height: 160rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-box{
  position: absolute;
  top: 136rpx;
  left: 88rpx;
  display: flex;
}
.img-btn{
  width: 136rpx;
  height: 54rpx;
  object-fit: cover;
  margin-left: 50rpx;
}
.back-btn{
  width: 137rpx;
	height: 56rpx;
  margin-left: 30rpx;
  padding-top: 30rpx;
}
