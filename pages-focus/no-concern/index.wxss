page {
  width: 750rpx;
  height: 100vh;
}

.pages-no-concern-index {
  width: 100%;
  /* height: 115%; */
  position: relative;
}

.img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.back-btn{
  width: 137rpx;
	height: 56rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
}
.info-box{
  position:absolute;
  top: 14%;
  left: 60rpx;
  z-index: 1000;
}
.name{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.circle{
  width: 11rpx;
	height: 11rpx;
  background-color: #ff5e4d;
  border-radius: 5rpx;
}
.name-text{
  margin-left: 20rpx;
  font-family: zihun197hao-damingsonghuaijiuban;
	font-size: 28rpx;
  font-weight: bold;
  letter-spacing: 6rpx;
  color: #000;
}
.input-box{
  width: 220rpx;
	height: 38rpx;
	background-color: #ffffff;
	border-radius: 19rpx;
  border: solid 1rpx #363636;
  padding-left: 20rpx;
}
.btn{
  width: 110rpx;
   height: 60rpx;
   margin-left: 20rpx;
}
.tip{
  width: 600rpx;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	line-height: 38rpx;
  color: #363636;
  margin-left: 30rpx;
}
.step{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #363636;
  margin-top: 30rpx;
  margin-left: 10rpx;
  width: 622rpx;

}
.frame{
  width: 620rpx;
	height: 340rpx;
	box-shadow: 0rpx 2rpx 19rpx 0rpx 
		#a3a3a3;
  border: solid 6rpx #ffffff;
  margin-top: 40rpx;
  z-index: 0;
}
.video{
  width: 620rpx;
  height: 340rpx;
  /* object-fit: contain; */
}
.trill{
  width: 620rpx;
	height: 300rpx;
	box-shadow: 0rpx 2rpx 19rpx 0rpx 
		#a3a3a3;
  border: solid 6rpx #ffffff;
  margin-top: 40rpx;
  background-color: #D4F4FF;
}
.copy{
  color: #000;  
  font-size: 28rpx;
  display: flex;
  align-items: center;
  line-height: 300rpx;
  padding-left: 28rpx;
}
.bottom-img{
  width: 100%;
  height: 400rpx;
  object-fit: cover;
  position: fixed;
  bottom: 0rpx;
  z-index: 1000;
 
}
.copy-img{
  width: 100rpx;
  height: 52rpx;
  margin-left: 20rpx;
}
.infuse{
  font-size: 24rpx;
  font-weight: bold;
}